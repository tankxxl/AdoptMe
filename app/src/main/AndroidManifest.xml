<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.umpay.adoptme" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PetListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PetDetailActivity"
            android:label="@string/title_pet_detail"
            android:parentActivityName=".PetListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PetListActivity" />
        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loading.LoadingActivity" />
        <activity
            android:name=".ripple.RipplesActivity"
            android:label="@string/title_activity_ripples" >
        </activity>
        <activity
            android:name=".propertyanim.PropertyAnimActivity"
            android:label="@string/title_activity_property_anim" >
        </activity>
        <activity
            android:name=".tween.TweenActivity"
            android:label="@string/title_activity_tween" >
        </activity>

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
